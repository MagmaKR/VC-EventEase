@model IEnumerable<VCEventEase.Models.Venue>
@{
    ViewData["Title"] = "ViewAll";
}
<head>
    <title>Venue List</title>
    <style>
        body {
            background: linear-gradient(to bottom, black, grey);
            color: black;
            margin: 0;
            padding: 0;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            padding: 20px;
        }

        .event {
            text-align: center;
            border: 2px solid black;
            border-radius: 20px;
            padding: 10px 10px;
            margin: 2px auto;
            width: 5px;
            transition: background-color 0.3s, cursor 0.3s;
            background-color: white;
        }

        .det {
            text-align: center;
            border: 2px solid black;
            border-radius: 20px;
            padding: 15px 30px;
            margin: 5px;
            transition: background-color 0.3s;
        }

            .det:hover {
                background-color: lightblue;
                color: black;
            }

        .card {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            margin: 10px;
            width: calc(33.333% - 40px);
            box-sizing: border-box;
            transition: transform 0.3s;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .card h3 {
                margin-top: 0;
                color: black;
            }

            .card p {
                color: black;
                margin: 10px 0;
            }

            .card a {
                color: black;
                text-decoration: none;
                font-weight: bold;
            }

                .card a:hover {
                    text-decoration: underline;
                }

        .venue-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .actions {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <h1 style="font-weight:bold; text-align: center; font-size: 6rem; color: lightblue;">All Venues</h1>
    <h1 style="font-size: 24px; width: 60%; margin-top:20px; margin-bottom:10px" class="event">
        <a asp-action="Create" asp-controller="Venue">Create New Venue</a>
    </h1>
    <div class="card-container">
        @foreach (var item in Model)
        {
            <div class="card">
                <img src="@item.ImageURL" alt="@item.VenueName" class="venue-image" onerror="this.onerror=null; this.src='/images/placeholder.jpg'; this.alt='Image not available';" />
                <h3 style="font-weight:bold">@Html.DisplayFor(modelItem => item.VenueName)</h3>
                <p><strong>Location:</strong> @Html.DisplayFor(modelItem => item.Location)</p>
                <p><strong>Capacity:</strong> @Html.DisplayFor(modelItem => item.Capacity)</p>
                <div class="actions">
                    <a asp-action="Details" asp-route-id="@item.VenueID" class="det">Details</a>
                   
                </div>
            </div>
        }
    </div>
</body>